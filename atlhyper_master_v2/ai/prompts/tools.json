[
  {
    "name": "get_pod_logs",
    "description": "获取指定 Pod 的日志内容，用于分析错误原因和运行状态",
    "parameters": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "description": "Pod 所在的命名空间"
        },
        "pod_name": {
          "type": "string",
          "description": "Pod 名称"
        },
        "container": {
          "type": "string",
          "description": "容器名称（多容器 Pod 时指定，可选）"
        },
        "tail_lines": {
          "type": "integer",
          "description": "返回最后 N 行日志，默认 100"
        }
      },
      "required": ["namespace", "pod_name"]
    }
  },
  {
    "name": "get_pod_describe",
    "description": "获取 Pod 的详细描述信息，包含事件、状态、容器配置等",
    "parameters": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "description": "Pod 所在的命名空间"
        },
        "pod_name": {
          "type": "string",
          "description": "Pod 名称"
        }
      },
      "required": ["namespace", "pod_name"]
    }
  },
  {
    "name": "get_deployment_status",
    "description": "获取 Deployment 的状态信息，包含副本数、更新策略、条件等",
    "parameters": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "description": "Deployment 所在的命名空间"
        },
        "deployment_name": {
          "type": "string",
          "description": "Deployment 名称"
        }
      },
      "required": ["namespace", "deployment_name"]
    }
  },
  {
    "name": "get_events",
    "description": "获取集群事件列表，可按命名空间和资源类型过滤",
    "parameters": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "description": "命名空间（可选，不指定则查所有）"
        },
        "involved_kind": {
          "type": "string",
          "description": "关联的资源类型: Pod, Node, Deployment 等（可选）"
        },
        "involved_name": {
          "type": "string",
          "description": "关联的资源名称（可选）"
        }
      }
    }
  },
  {
    "name": "get_configmap",
    "description": "获取 ConfigMap 的内容数据",
    "parameters": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "description": "ConfigMap 所在的命名空间"
        },
        "configmap_name": {
          "type": "string",
          "description": "ConfigMap 名称"
        }
      },
      "required": ["namespace", "configmap_name"]
    }
  },
  {
    "name": "get_node_status",
    "description": "获取 Node 的状态信息，包含资源使用率、条件、标签等",
    "parameters": {
      "type": "object",
      "properties": {
        "node_name": {
          "type": "string",
          "description": "Node 名称"
        }
      },
      "required": ["node_name"]
    }
  },
  {
    "name": "list_pods",
    "description": "列出指定命名空间的 Pod 列表，包含状态和重启次数",
    "parameters": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "description": "命名空间"
        },
        "label_selector": {
          "type": "string",
          "description": "标签选择器，如 app=nginx（可选）"
        }
      },
      "required": ["namespace"]
    }
  }
