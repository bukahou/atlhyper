# =============================================================================
# AtlHyper Controller Dockerfile
# 后端控制器 (Master) - 提供 API 服务
# =============================================================================

ARG GO_VERSION=1.24

# -----------------------------------------------------------------------------
# Stage 1: Build
# -----------------------------------------------------------------------------
FROM golang:${GO_VERSION}-alpine AS builder

LABEL stage=builder

# 安装编译依赖 (SQLite 需要 CGO)
RUN apk add --no-cache gcc musl-dev sqlite-dev

WORKDIR /app

# 依赖缓存优化
COPY go.mod go.sum ./
RUN go mod download

COPY . .

# 启用 CGO (SQLite 需要)
ENV CGO_ENABLED=1
ENV GOOS=linux

# 编译优化: 去除调试信息减小体积
RUN go build -ldflags="-s -w" -o atlhyper-controller ./cmd/atlhyper_master/main.go

# -----------------------------------------------------------------------------
# Stage 2: Runtime
# -----------------------------------------------------------------------------
FROM alpine:3.19

LABEL maintainer="AtlHyper Team"
LABEL description="AtlHyper Controller - Kubernetes Monitoring Platform API"

# 安装运行时依赖
RUN apk add --no-cache sqlite-libs ca-certificates tzdata

# 设置时区
ENV TZ=Asia/Shanghai

WORKDIR /app

# 从构建阶段复制二进制
COPY --from=builder /app/atlhyper-controller .

# 创建数据目录
RUN mkdir -p /app/data && chmod +x ./atlhyper-controller

# 健康检查
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

EXPOSE 8080

ENTRYPOINT ["./atlhyper-controller"]
